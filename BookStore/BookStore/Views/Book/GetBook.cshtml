
@model BookStore.Models.BookModel
@{
    ViewData["Title"] = Model.Title + " Details";
}


<div class="container ">
    <h3 class="display-4">Book Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="i" class="@(i==0 ? "active":"")" aria-current="true" aria-label="Slide 1"></button>

                    }

                    @*<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>*@
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                    <div  class="@(i==0 ? "carousel-item active":"carousel-item")" >
                        <img src="@Model.Gallery[i].URL" class="d-block w-100" alt="@Model.Gallery[i].Name">
                    </div>
                    }
                    @*<div class="carousel-item">
                        <img src="~/images/BookIllustration2.png" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/BookIllustration3.png" class="d-block w-100" alt="...">
                    </div>*@
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="lebel-primary label">By: </span>
                    <span class="font-monospace">@Model.Author</span>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <p class="description">@Model.Description</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" href="@Model.BookPdfUrl" targer="_blank">
                        Read Now
                    </a>
                </div>
            </div>
            
            <hr/>
            
            <ul class="list-group">
                <li class="list-group-item"><span class="fw-bold">Category -</span>@Model.Category</li>
                <li class="list-group-item"><span class="fw-bold">Total Pages -</span>@Model.TotalPages</li>
                <li class="list-group-item"><span class="fw-bold">Language -</span>@Model.LanguageName</li>
            </ul>

        </div>
    </div>
</div>
